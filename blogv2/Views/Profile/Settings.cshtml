@model blogv2.Models.Kullanicilar

@{
    ViewData["Title"] = "Settings";
}
    @{
        var username = User.Identity.Name;
    }
<div class="settingsContainer">
    <form asp-controller="Profile" asp-route-userId="@ViewBag.ID" asp-action="UpdateProfile" method="post">
        <input type="hidden" asp-for="id" />

        <div class="create-container">
            <div class="form-group">
                <label for="baslik" class="baslikcreate">Kullanıcı Adı:</label>
                <input required asp-for="Username" class="tittlee" type="text" value="@ViewBag.User">
            </div>

            <div class="form-group">
                <label for="icerik" class="baslikcreate">Hakkımda:</label>
                <textarea id="About" name="About" class="inputİcerik">@Html.Raw(ViewBag.about)</textarea>
            </div>

            <div class="form-group">
                <label for="foto" class="baslikcreate">İsim</label>
                <input required asp-for="Name" class="foto" type="text" value="@Html.Raw(@ViewBag.Name)">
            </div>

            <div class="form-group">
                <label for="foto" class="baslikcreate">Soyad</label>
                <input required asp-for="Surname" class="foto" type="text" value="@Html.Raw(@ViewBag.Surname)">
            </div>

            <div class="form-group">
                <label for="foto" class="baslikcreate">Avatar URL</label>
                <input required asp-for="profileImage" class="foto" type="text" value="@ViewBag.profileImage">
            </div>

            <button type="submit" class="button-submit">Kaydet</button>
        </div>
    </form>
</div>

<style>
    .select {
        width: 200px;
        height: 50px;
        vertical-align: central;
        border: 1px solid gray;
        border-radius: 5px;
    }

    .foto {
        border-radius: 3px;
        width: 100%;
        height: 50px;
        border: 1px solid gray;
    }

    .form-group {
        margin-bottom: 20px;
        width: 100%;
        height: auto;
    }

    .create-container {
        padding-top: 120px;
        width: 40%;
        height: 1400px;
        margin: auto;
    }

    .inputİcerik {
        width: 100%;
        height: 500px;
    }

    .tittlee {
        font-size: 25px;
        border: 1px solid gray;
        border-radius: 3px;
        width: 100%;
        height: 100px;
    }

    .baslikcreate {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        font-size: 20px;
        line-height: 40px;
    }

    .form-group input {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

    .form-group textarea {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

    .image-preview {
        margin-top: 10px;
    }

    .preview-img {
        max-width: 100%;
        max-height: 200px;
        display: block;
        margin-top: 10px;
    }
</style>
